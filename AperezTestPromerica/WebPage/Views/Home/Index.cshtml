@model WebPage.Models.LoginViewModel
@{
    ViewData["Title"] = "Home Page";
}

<section class="h-100">
    <div class="row justify-content-sm-center h-100">
        <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
            <div class="card shadow-lg">
                <div class="card-body p-5">
                    <h1 class="fs-4 card-title fw-bold mb-4">Login</h1>
                    <form method="POST" asp-action="Login" class="needs-validation" novalidate="" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3">
                            <label class="mb-2 text-muted" for="username">Usuario</label>
                            <input asp-for="UserName" id="username" type="text" class="form-control" name="username" value="" autofocus>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="mb-2 w-100">
                                <label class="text-muted" for="password">Password</label>
                            </div>
                            <input asp-for="Password" id="password" type="password" class="form-control" name="password" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-flex align-items-center">
                            <button type="submit" class="btn btn-primary ms-auto">
                                Login
                            </button>
                        </div>
                        <div class="mb-3">
                            <span class="text-danger mb-2 w-100">@Html.ValidationMessage("CustomError")</span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
